while true do
    for _, instance in ipairs(game:GetDescendants()) do
        if instance:IsA("ValueBase") then
            if instance.Name == "Current" then
                instance.Value = 9000000000 -- Current değerini 9 trilyon yapar
            elseif instance.Name == "Mana" then
                instance.Value = 9000000000 -- Mana değerini 8 trilyon yapar
            end
        end
    end
    wait(0.3)
end
